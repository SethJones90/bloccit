<%= form_for [post, post.comments.new], remote: true do |f| %>
  <div class="form-group">
    <%= f.text_area :body, rows: 1, class: 'form-control', placeholder: "Enter comment here" %>
  </div>
  <div class="form-group">
    <%= f.submit "Add comment", class: "btn btn-success" %>
  </div>
<% end %>